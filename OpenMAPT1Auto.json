  "description": {
    "short": "Automated brain MRI parcellation using OpenMAP-T1 deep learning model",
    "long": "This extension provides automated segmentation of T1-weighted brain MRI images into 280 anatomical regions using the OpenMAP-T1 deep learning model. Models are downloaded automatically from Google Drive (~1.5GB). Supports volume calculation and Excel/CSV export."
  },
  "acknowledgments": {
    "text": "Built upon OpenMAP-T1 by Taiki Nishimaki and Johns Hopkins University.",
    "url": "https://github.com/TaikiNishimaki/OpenMAP-T1"
  },
  "license": {
    "extension_code": "MIT",
    "model": "JHU Research Software License - Non-Commercial",
    "note": "Models downloaded automatically via Google Drive. Non-commercial use only."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niyaziacer/SlicerOpenMAPT1Auto",
    "branch": "master"
  },
  "homepage": "https://github.com/niyaziacer/SlicerOpenMAPT1Auto",
  "documentation": "https://github.com/niyaziacer/SlicerOpenMAPT1Auto/blob/master/README.md",
  "status": "Beta",
  "version": "1.0.0",
  "slicer_version": "5.0+",
  "dependencies": {
    "python_packages": [
      "torch>=1.7.0",
      "numpy>=1.19.0",
      "nibabel>=3.2.0",
      "pandas",
      "openpyxl",
      "gdown"
    ],
